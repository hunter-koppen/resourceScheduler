<?xml version="1.0" encoding="utf-8" ?>
<widget id="kobeon.resourcescheduler.ResourceScheduler" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Resource Scheduler</name>
    <description />
    <icon />
    <properties>
        <propertyGroup caption="Timeline">
            <propertyGroup caption="Time view">
                <property key="timelineStart" type="attribute" required="false">
                    <caption>Start date</caption>
                    <description>The start date for the timeline (Optional)</description>
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
                <property key="timelineEnd" type="attribute" required="false">
                    <caption>End date</caption>
                    <description>The end date for the timeline (Optional)</description>
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Hide options">
                <property key="dayStart" type="expression" required="true" defaultValue="'08:00'">
                    <caption>Hours start</caption>
                    <description>Start time of the day (for example 08:00).</description>
                    <returnType type="String" />
                </property>
                <property key="dayEnd" type="expression" required="true" defaultValue="'18:00'">
                    <caption>Hours end</caption>
                    <description>End time of the day (for example 18:00).</description>
                    <returnType type="String" />
                </property>
                <property key="hideWeekends" type="expression" defaultValue="false">
                    <caption>Hide weekends</caption>
                    <description />
                    <returnType type="Boolean" />
                </property>
            </propertyGroup>
            <propertyGroup caption="Settings">
                <property key="timelineMaxHeight" type="expression" required="false">
                    <caption>Max height</caption>
                    <description>The max height of the timeline (can use any unit).</description>
                    <returnType type="String" />
                </property>
                <property key="timelineMovable" type="boolean" required="true" defaultValue="true">
                    <caption>Movable?</caption>
                    <description>Specifies whether the Timeline can be moved and zoomed by dragging the window.</description>
                </property>
                <property key="zoomSetting" type="enumeration" defaultValue="none">
                    <caption>Zooming</caption>
                    <description>Allow zoom functionality for the timeline.</description>
                    <enumerationValues>
                        <enumerationValue key="none">None</enumerationValue>
                        <enumerationValue key="scroll">Mouse scroll</enumerationValue>
                        <enumerationValue key="shiftKey">Shift</enumerationValue>
                        <enumerationValue key="ctrlKey">Ctrl</enumerationValue>
                        <enumerationValue key="altKey">Alt</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="customLoader" type="boolean" required="true" defaultValue="false">
                    <caption>Loader?</caption>
                    <description>Show some content while the timeline is loading.</description>
                </property>
                <property key="loadingContent" type="widgets" required="false">
                    <caption>Loading timeline, content here will be shown while the timeline is loading.</caption>
                    <description>The content to show while loading the timeline</description>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Groups">
            <propertyGroup caption="Datasource">
                <property key="groupData" type="datasource" required="false" isList="true">
                    <caption>Groups</caption>
                    <description>Return the list of groups you wish to show in the scheduler</description>
                </property>
                <property key="groupContent" type="widgets" required="false" dataSource="groupData">
                    <caption>Group content, place widgets here</caption>
                    <description>The content to render inside a group</description>
                </property>
                <property key="groupId" type="attribute" required="true" dataSource="groupData">
                    <caption>Group ID</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Settings">
                <property key="groupHeightMode" type="enumeration" defaultValue="fitItems">
                    <caption>Group height</caption>
                    <description>Specifies how the height of a group is calculated.</description>
                    <enumerationValues>
                        <enumerationValue key="auto">Auto</enumerationValue>
                        <enumerationValue key="fixed">Fixed</enumerationValue>
                        <enumerationValue key="fitItems">FitItems</enumerationValue>
                    </enumerationValues>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Items">
            <propertyGroup caption="Datasource">
                <property key="itemData" type="datasource" required="false" isList="true">
                    <caption>Items</caption>
                    <description>Return the list of items you wish to show in the scheduler</description>
                </property>
                <property key="itemContent" type="widgets" required="false" dataSource="itemData">
                    <caption>Item content, place widgets here</caption>
                    <description>The content to render inside an Item</description>
                </property>
                <property key="itemStart" type="attribute" required="true" dataSource="itemData">
                    <caption>StartTime</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
                <property key="itemEnd" type="attribute" required="true" dataSource="itemData">
                    <caption>EndTime</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
                <property key="itemGroupId" type="attribute" required="true" dataSource="itemData">
                    <caption>Group ID</caption>
                    <description>Use an association to select the group Id</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="itemTooltipText" type="attribute" required="false" dataSource="itemData">
                    <caption>Tooltip Text</caption>
                    <description>The text to show in the tooltip when hovering over an item.</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Settings">
                <property key="allowDragging" type="boolean" required="true" defaultValue="false">
                    <caption>Allow dragging?</caption>
                    <description>Allow items to be moved/stretched on the timeline?</description>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Events">
            <propertyGroup caption="Data">
                <property key="eventStartTime" type="attribute" required="false">
                    <caption>Event StartTime Attribute</caption>
                    <description>Attribute that will contain the start datetime of a timeline event (see readme)</description>
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
                <property key="eventEndTime" type="attribute" required="false">
                    <caption>Event EndTime Attribute</caption>
                    <description>Attribute that will contain the end datetime of a timeline event (see readme)</description>
                    <attributeTypes>
                        <attributeType name="DateTime" />
                    </attributeTypes>
                </property>
                <property key="eventGroupId" type="attribute" required="false">
                    <caption>Event Group ID</caption>
                    <description>Attribute that will contain the group id of a timeline event (see readme)</description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Items">
                <property key="onDrag" type="action" required="false" dataSource="itemData">
                    <caption>On drag</caption>
                    <description>Action to call when dragging items on the timeline.</description>
                </property>
                <property key="onItemClick" type="action" required="false" dataSource="itemData">
                    <caption>On click</caption>
                    <description>Action to call when clicking on an item.</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Timeline">
                <property key="onTimelineClick" type="action" required="false">
                    <caption>On timeline click</caption>
                    <description>Action to call when clicking somewhere on the timeline that is not an item, you can use this to create new items.</description>
                </property>
                <property key="onRangeChanged" type="action" required="false">
                    <caption>On range change</caption>
                    <description>Action to call when the start and end date of the timeline view has changed, you can use this to retrieve new data.</description>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>
